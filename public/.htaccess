RewriteEngine On

# üåê –†–µ–¥–∏—Ä–µ–∫—Ç www ‚Üí –±–µ–∑ www (301)
RewriteCond %{HTTP_HOST} ^www\.aquanika74\.ru$ [NC]
RewriteRule ^(.*)$ https://aquanika74.ru/$1 [R=301,L]

# üö´ –ë–ª–æ–∫–∏—Ä—É–µ–º –ø—Ä—è–º–æ–π –¥–æ—Å—Ç—É–ø –∫ —Ñ—Ä–∞–≥–º–µ–Ω—Ç–∞–º —á–µ—Ä–µ–∑ –±—Ä–∞—É–∑–µ—Ä (–Ω–æ —Ä–∞–∑—Ä–µ—à–∞–µ–º fetch/AJAX)
# –í–ê–ñ–ù–û: –≠—Ç–æ –ø—Ä–∞–≤–∏–ª–æ –¥–æ–ª–∂–Ω–æ –±—ã—Ç—å –ü–ï–†–ï–î –ø—Ä–æ–≤–µ—Ä–∫–æ–π —Å—É—â–µ—Å—Ç–≤–æ–≤–∞–Ω–∏—è —Ñ–∞–π–ª–∞!
# –§—Ä–∞–≥–º–µ–Ω—Ç—ã –¥–æ–ª–∂–Ω—ã –∑–∞–≥—Ä—É–∂–∞—Ç—å—Å—è —Ç–æ–ª—å–∫–æ —á–µ—Ä–µ–∑ JavaScript fetch(), –Ω–µ –Ω–∞–ø—Ä—è–º—É—é –≤ –±—Ä–∞—É–∑–µ—Ä–µ
# –ü—Ä–æ–≤–µ—Ä—è–µ–º: –µ—Å–ª–∏ —ç—Ç–æ –∑–∞–ø—Ä–æ—Å –∫ /fragments/ –ò –Ω–µ—Ç –∑–∞–≥–æ–ª–æ–≤–∫–∞ X-Requested-With ‚Üí –±–ª–æ–∫–∏—Ä—É–µ–º
# –ò—Å–∫–ª—é—á–µ–Ω–∏–µ: —Ä–∞–∑—Ä–µ—à–∞–µ–º –Ø–Ω–¥–µ–∫—Å–±–æ—Ç—É –¥–æ—Å—Ç—É–ø –∫ —Ñ—Ä–∞–≥–º–µ–Ω—Ç–∞–º –¥–ª—è –∫–æ—Ä—Ä–µ–∫—Ç–Ω–æ–π –∏–Ω–¥–µ–∫—Å–∞—Ü–∏–∏ SPA
RewriteCond %{REQUEST_URI} ^/fragments/ [NC]
RewriteCond %{HTTP_USER_AGENT} !(YandexBot|YandexImages) [NC]
RewriteCond %{HTTP:X-Requested-With} ^$ [OR]
RewriteCond %{HTTP:X-Requested-With} !XMLHttpRequest
# –ï—Å–ª–∏ —ç—Ç–æ –ø—Ä—è–º–æ–π –ø–µ—Ä–µ—Ö–æ–¥ –≤ –±—Ä–∞—É–∑–µ—Ä–µ (–Ω–µ fetch) ‚Üí –∑–∞–ø—Ä–µ—â–∞–µ–º –¥–æ—Å—Ç—É–ø (403 Forbidden)
RewriteRule ^fragments/.*$ - [F,L]


# üìÅ –ï—Å–ª–∏ –∑–∞–ø—Ä–∞—à–∏–≤–∞–µ–º—ã–π –ø—É—Ç—å ‚Äî —Ñ–∏–∑–∏—á–µ—Å–∫–∏–π —Ñ–∞–π–ª/–ø–∞–ø–∫–∞, –æ—Ç–¥–∞—Ç—å –∫–∞–∫ –µ—Å—Ç—å
# –≠—Ç–æ –≤–∫–ª—é—á–∞–µ—Ç —Å—Ç–∞—Ç–∏–∫—É (assets, components, etc.), –Ω–æ –ù–ï /fragments/* (—É–∂–µ –∑–∞–±–ª–æ–∫–∏—Ä–æ–≤–∞–Ω—ã –≤—ã—à–µ)
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# üñº –ï—Å–ª–∏ –∑–∞–ø—Ä–∞—à–∏–≤–∞–µ—Ç—Å—è —Å—Ç–∞—Ç–∏—á–µ—Å–∫–∏–π —Ä–µ—Å—É—Ä—Å, –Ω–æ –µ–≥–æ –Ω–µ—Ç ‚Üí 404
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|ico|pdf|txt|svg|woff|woff2|ttf|eot|webp|mp4|xml|json)$ [NC]
RewriteRule ^ - [R=404,L]

# üè† SPA fallback: –≤—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ –∑–∞–ø—Ä–æ—Å—ã ‚Üí index.html (—Ä–æ—É—Ç–µ—Ä —Å–∞–º –ø–æ–¥–≥—Ä—É–∑–∏—Ç /fragments/X.html)
# –í—Å–µ –æ—Å—Ç–∞–ª—å–Ω—ã–µ –ø—É—Ç–∏ (–Ω–µ —Ñ–∞–π–ª—ã, –Ω–µ –ø–∞–ø–∫–∏) ‚Üí index.html –¥–ª—è SPA —Ä–æ—É—Ç–∏–Ω–≥–∞
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.html [L]

# üîê –ë–µ–∑–æ–ø–∞—Å–Ω—ã–µ –∑–∞–≥–æ–ª–æ–≤–∫–∏
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "DENY"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
    Header always set Cross-Origin-Opener-Policy "same-origin"
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://mc.yandex.ru https://mc.yandex.com https://api-maps.yandex.ru https://yastatic.net https://core-renderer-tiles.maps.yandex.net; style-src 'self' 'unsafe-inline' data: https://yastatic.net; img-src 'self' data: https: https://mc.yandex.ru https://mc.yandex.com; connect-src 'self' https://formspree.io https://api-maps.yandex.ru https://mc.yandex.ru https://mc.yandex.com wss://mc.yandex.ru wss://mc.yandex.com; frame-src 'self' https://yandex.ru https://mc.yandex.ru https://mc.yandex.com; font-src 'self' https://yastatic.net; base-uri 'self'; form-action 'self' https://formspree.io;"
</IfModule>

# ‚è± –ö—ç—à–∏—Ä–æ–≤–∞–Ω–∏–µ
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/ "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/pdf "access plus 1 month"
</IfModule>

# üì¶ –°–∂–∞—Ç–∏–µ
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json image/svg+xml
</IfModule>